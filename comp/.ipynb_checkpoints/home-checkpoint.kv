<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_y': 0.7}
        #MDToolbar:
        #    title: 'Your App'
        #    md_bg_color: app.theme_cls.primary_color
        #    left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]

        MDScreen:
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(16)

                MDLabel:
                    text: 'Welcome'
                    theme_text_color: 'Primary'
                    halign: 'center'
                    font_style: 'H4'
            MDBoxLayout:
                Image:
                    source: 'img/home.jpeg'  # Replace with the path to your image
                    # size_hint_y: None
                    # height: dp(100)  # Adjust the height of the image as needed
                    allow_stretch: True
                    # pos_hint: {'y': 0.7}

            ScrollView:
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: dp(10)
                    padding: dp(16)

                    OneLineListItem:
                        text: 'Button 1'
                        on_release: app.on_button_click('Button 1')

                    OneLineListItem:
                        text: 'Button 2'
                        on_release: app.on_button_click('Button 2')

                    OneLineListItem:
                        text: 'Button 3'
                        on_release: app.on_button_click('Button 3')

                    # Add more round buttons as needed

