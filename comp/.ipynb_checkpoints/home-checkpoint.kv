<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_y': 0.7}
        
        MDScreen:
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(16)
            
            MDBoxLayout:
                Image:
                    source: 'img/home.jpeg' 
                    allow_stretch: True
                    pos_hint: {'y': 0.1}
            
            ScrollView:
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: dp(10)
                    padding: dp(16)

                    OneLineListItem:
                        text: 'Cardiology'
                        on_release: app.change_screen('doctors_list')

                    OneLineListItem:
                        text: 'Dentist'
                        on_release: app.change_screen('second_list')

                    OneLineListItem:
                        text: 'Surgeon'
                        on_release: app.change_screen('third_list')
                        
                    OneLineListItem:
                        text: 'Gynecologist'
                        on_release: app.change_screen('fourth_list')
                        
    BoxLayout:
        MDFillRoundFlatButton:
            text: 'Log out'
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            halign: 'center'
            on_release:
                app.change_screen('login_screen')
                app.clear_text()