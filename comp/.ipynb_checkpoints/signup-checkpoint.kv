<SignupScreen>:    
    namee: namee
    email: email
    password: passw
    #age: age
    #gender: gender
    group: 'group'
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(16)

        MDLabel:
            text: 'Sign Up'
            theme_text_color: 'Primary'
            halign: 'center'
            font_style: 'H4'

        MDTextField:
            hint_text: 'Username'
            id: namee
            helper_text: 'Enter your username'
            helper_text_mode: 'on_focus'
            icon_right: 'account'
            required: True

        MDTextField:
            hint_text: 'Email'
            id: email
            helper_text: 'Enter your email'
            helper_text_mode: 'on_focus'
            icon_right: 'email'
            required: True

        MDTextField:
            hint_text: 'Password'
            id: passw
            helper_text: 'Enter your password'
            helper_text_mode: 'on_focus'
            icon_right: 'lock-outline'
            password: True
            required: True
            
        BoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            padding: '10dp'

            MDLabel:
                text: "Select Gender"
                halign: 'center'
                theme_text_color: "Secondary"    

            FloatLayout:
                orientation: 'horizontal'
                spacing: '10dp'

                MDCheckbox:
                    active: True
                    pos_hint: {'center_x': .4, 'center_y': .5}
                MDLabel:
                    text: 'Male'

                MDCheckbox:
                    pos_hint: {'center_x': .6, 'center_y': .5}
                MDLabel:
                    text: 'Female'

        MDRaisedButton:
            text: 'Sign Up'
            size_hint: None, None
            size: dp(200), dp(48)
            pos_hint: {'center_x': 0.5}
            on_release: 
                app.create_patch(namee.text, email.text, passw.text)

        MDLabel:
            text: 'Already have an account? Login'
            theme_text_color: 'Secondary'
            halign: 'center'
            #on_ref_press: app.change_screen('login_screen')