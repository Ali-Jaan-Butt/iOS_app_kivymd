<SignupScreen>:    
    namee: namee
    email: email
    password: passw
    age: age
    group: 'group'
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(16)

        MDLabel:
            text: 'Sign Up'
            theme_text_color: 'Primary'
            halign: 'center'
            font_style: 'H4'

        MDTextField:
            hint_text: 'Username'
            id: namee
            helper_text: 'Enter your username'
            helper_text_mode: 'on_focus'
            icon_right: 'account'
            required: True

        MDTextField:
            hint_text: 'Email'
            id: email
            helper_text: 'Enter your email'
            helper_text_mode: 'on_focus'
            icon_right: 'email'
            required: True

        MDTextField:
            hint_text: 'Password'
            id: passw
            helper_text: 'Enter your password'
            helper_text_mode: 'on_focus'
            icon_right: 'lock-outline'
            password: True
            required: True
            

        MDTextField:
            id: gender_field
            hint_text: 'Select Gender'
            pos_hint: {'center_x': 0.5}
            on_focus: app.show_gender_menu(self, self.focus)
                    
        MDTextField:
            hint_text: 'Age'
            id: age
            helper_text: 'Enter your age'
            helper_text_mode: 'on_focus'
            required: True

        MDRaisedButton:
            text: 'Sign Up'
            size_hint: None, None
            size: dp(200), dp(48)
            pos_hint: {'center_x': 0.5}
            on_release: 
                app.create_patch(namee.text, email.text, passw.text, age.text, gender_field.text)