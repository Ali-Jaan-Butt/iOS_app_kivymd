<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_y': 0.7}
        
        MDScreen:
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(16)
            
            MDBoxLayout:
                Image:
                    source: 'img/home.jpeg'  # Replace with the path to your image
                    # size_hint_y: None
                    # height: dp(100)  # Adjust the height of the image as needed
                    allow_stretch: True
                    pos_hint: {'y': 0.1}
            
            ScrollView:
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: dp(10)
                    padding: dp(16)

                    OneLineListItem:
                        text: 'Cardiology'
                        on_release: app.change_screen('doctors_list')

                    OneLineListItem:
                        text: 'Dentist'
                        on_release: app.change_screen('second_list')

                    OneLineListItem:
                        text: 'Surgeon'
                        on_release: app.change_screen('third_list')
                        
                    OneLineListItem:
                        text: 'Gynecologist'
                        on_release: app.change_screen('fourth_list')